// fonts!
ssp(src_suffix, sty=normal, weight=normal)
  @font-face
    font-family 'Source Sans Pro'
    font-style sty
    font-weight weight
    src url('fonts/ssp/SourceSansPro-'+src_suffix+'.otf')

ssp('Regular')
ssp('Light', normal, lighter)
ssp('Bold', normal, bold)
ssp('Italic', italic, normal)
ssp('LightIt', italic, lighter)
ssp('BoldIt', italic, bold)

@font-face
  font-family 'Blackout'
  src url('fonts/bo/blackout_midnight-webfont.eot')
  src local('Blackout Midnight'), url('fonts/bo/blackout_midnight-webfont.ttf') format('truetype'), url('fonts/bo/blackout_midnight-webfont.woff') format('woff'), url('fonts/bo/blackout_midnight-webfont.svg') format('svg')

animation()
  animation arguments
  -webkit-animation arguments
  -moz-animation arguments
  -o-aniamtion arguments

transform()
  transform arguments
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments

transition()
  transition arguments
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments

transform-origin()
  transform-origin arguments
  -webkit-transform-origin arguments
  -moz-transform-origin arguments
  -o-transform-origin arguments


// colors!
greeny = #78Fb10

// resets!
*
  margin 0
  padding 0
  border none
  text-decoration none
  font-family inherit
  font-size inherit
  font-weight inherit

// reasonable defaults!
body
  background-color #000
  color #fff
  font-family 'Source Sans Pro', 'Gill Sans', sans-serif
  width 800px
  margin 0 auto
  line-height 1.5

// UNICORNS
.block
  margin 20px 0
  padding 20px 0
  border-bottom 1px solid #fff

.center
  text-align center

h1, h2
  line-height 1
  font-family 'Blackout'
  color #fff

h1
  font-size 80px
  margin-bottom 60px
  & em
    color greeny
    font-style normal

h2, big
  font-size 40px
  font-family 'Blackout'

p
  font-size 25px
  padding 10px 0

a
  position relative
  color greeny
  padding 5px
  margin 0 5px
  border 1px solid greeny
  background-color #000
  transition 0.2s all ease-in-out
  &:hover, &:focus
    outline none
    color #000
    background-color greeny
  &:visited
    border 1px dashed greeny
  &:active
    top 1px


// double rainbow

#flask, #flask-bg
  position absolute
  width 300px
  height 300px

#flask
  margin-left 684px
  top 920px
  & img
    display block
  &:hover #flask-bg
    background-color greeny

#flask-bg
  z-index -1
  background-color #fff
  margin-top -300px
  height 300px
  animation fillflask 20s ease-out
  transition 0.4s background-color ease-in-out

#progress, #bar
  position absolute
  height 60px
  margin-top -60px

#progress 
  width 800px
  transform-origin 100% 0%
  animation tilt 20s ease-in

  & h2
    color #000
    padding 10px

#bar
  z-index -1
  width 800px
  background-color #fff
  animation fillbar 20s ease-in

@keyframes fillbar
  0%
    width 0px
  20%
    width 800px
  90%
    width 800px
  94%
    width 0px
  100%
    width 0px

@keyframes tilt
  0%
    transform rotate(0deg)
  86%
    transform rotate(0deg)
  90%
    transform rotate(-90deg)
  100%
    transform rotate(-90deg)

@keyframes fillflask
  0%
    height 0px
  90%
    height 0px
  94%
    height 300px
  100%
    height 300px
