// fonts!
ssp(src_suffix, sty=normal, weight=normal)
  @font-face
    font-family 'Source Sans Pro'
    font-style sty
    font-weight weight
    src url('fonts/ssp/SourceSansPro-'+src_suffix+'.otf')

ssp('Regular')
ssp('Light', normal, lighter)
ssp('Bold', normal, bold)
ssp('Italic', italic, normal)
ssp('LightIt', italic, lighter)
ssp('BoldIt', italic, bold)

@font-face
  font-family 'Blackout'
  src url('fonts/bo/blackout_midnight-webfont.eot')
  src local('Blackout Midnight'), url('fonts/bo/blackout_midnight-webfont.ttf') format('truetype'), url('fonts/bo/blackout_midnight-webfont.woff') format('woff'), url('fonts/bo/blackout_midnight-webfont.svg') format('svg')

// colors!
greeny = #438C45

// resets!
*
  margin 0
  padding 0
  border none
  text-decoration none
  font-family inherit
  font-size inherit
  font-weight inherit

// reasonable defaults!
body
  background-color #000
  color #fff
  font-family 'Source Sans Pro'
  width 800px
  margin 0 auto
  line-height 1.5

// UNICORNS
.block
  margin 20px 0
  padding 20px 0
  border-bottom 1px solid #fff

.center
  text-align center

h1, h2
  line-height 1
  font-family 'Blackout'
  color #fff

h1
  font-size 80px
  margin-bottom 60px
  & em
    color greeny
    font-style normal

h2, big
  font-size 40px
  font-family 'Blackout'

p
  font-size 25px
  padding 10px 0

a
  position relative
  color greeny
  padding 5px
  margin 0 5px
  border 1px solid greeny
  &:hover
    color #000
    background greeny
  &:active
    top 1px


// double rainbow

animation()
  animation arguments
  -webkit-animation arguments
  -moz-animation arguments
  -o-aniamtion arguments

transform()
  transform arguments
  -webkit-transform arguments
  -moz-transform arguments
  -o-transform arguments

transform-origin()
  transform-origin arguments
  -webkit-transform-origin arguments
  -moz-transform-origin arguments
  -o-transform-origin arguments

#flask
  background-color #fff
  width 300px
  height 300px
  position absolute
  z-index -1
  margin-left 700px
  top 450px

#progress, #bar
  position absolute
  width 800px
  margin-top -60px

#progress 
  border 1px solid #fff
  height 60px
  transform-origin 0px 0px
  transform rotate(4deg)
  animation tilt 20s ease-in

  & h2
    z-index 1
    color #000
    padding 10px

#bar
  z-index -1
  height 60px
  background-color #fff
  animation fillbar 20s ease-in

@keyframes fillbar
  0%
    width 1px
  50%
    width 800px

@keyframes tilt
  0%
    transform rotate(0deg)
  50%
    transform rotate(0deg)
  52%
    transform rotate(5deg)