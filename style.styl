// fonts!
ssp(src_suffix, sty=normal, weight=normal)
  @font-face
    font-family 'Source Sans Pro'
    font-style sty
    font-weight weight
    src url('fonts/ssp/SourceSansPro-'+src_suffix+'.otf')

ssp('Regular')
ssp('Light', normal, lighter)
ssp('Bold', normal, bold)
ssp('Italic', italic, normal)
ssp('LightIt', italic, lighter)
ssp('BoldIt', italic, bold)

@font-face
  font-family 'Blackout'
  src url('fonts/bo/blackout_midnight-webfont.eot')
  src local('Blackout Midnight'), url('fonts/bo/blackout_midnight-webfont.ttf') format('truetype'), url('fonts/bo/blackout_midnight-webfont.woff') format('woff'), url('fonts/bo/blackout_midnight-webfont.svg') format('svg')

// colors!
greeny = #438C45

// resets!
*
  margin 0
  padding 0
  border none
  text-decoration none
  font-family inherit
  font-size inherit
  font-weight inherit

// reasonable defaults!
body
  background-color #000
  color #fff
  font-family 'Source Sans Pro'
  width 800px
  margin 0 auto
  line-height 1.5

// UNICORNS
.block
  margin 20px 0
  padding 20px 0
  border-bottom 1px solid #fff

.center
  text-align center

h1, h2
  line-height 1
  font-family 'Blackout'
  color #fff

h1
  font-size 80px
  & em
    color greeny
    font-style normal

h2, big
  font-size 40px
  font-family 'Blackout'

p
  font-size 25px
  padding 10px 0

a
  position relative
  color greeny
  padding 5px
  margin 0 5px
  border 1px solid greeny
  &:hover
    color #000
    background greeny
  &:active
    top 1px


// double rainbow

#progress
  color #000
  background-color #fff
  padding 10px
  border 1px solid #000
